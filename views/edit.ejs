<% include ./partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h1 class="text-center">edit
                    <%=foundpost.title%> post</h1>

                <form action="/post/<%=foundpost._id%>?_method=PUT" method="POST">

                    <div class="form-row">
                        <div class="col">
                            <input type="text" class="form-control" name="content[title]" value="<%=foundpost.title%>">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" name="content[image]" value="<%=foundpost.image%>">
                        </div>
                    </div>
                    <div class="editor">
                        <textarea id="myTextarea" name="content[body]" cols="30" rows="10">
                            <%=foundpost.body%>
                        </textarea>
                    </div>
<button type="submit" class="btn btn-secondary btn-lg btn-block">submit</button>
                </form>
            </div>

            <div class="col-md-1"></div>
        </div>
    </div>


    <% include ./partials/footer %>